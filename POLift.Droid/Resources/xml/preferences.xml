<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
    android:key="ask_for_warmup"
    android:title="Ask for warmup routine"
    android:summary=""
    android:defaultValue="true"
      />
  <CheckBoxPreference
    android:key="default_warmup"
    android:title="Perform warmup by default"
    android:summary="the above setting must be disabled"
    android:defaultValue="false"
      />

  <CheckBoxPreference
    android:key="ask_for_routine_resume"
    android:title="Ask for routine resume"
    android:summary="When selecting an uncompleted routine"
    android:defaultValue="true"
      />

  <CheckBoxPreference
    android:key="ask_for_start_next_routine"
    android:title="Ask for next routine start"
    android:summary="on startup"
    android:defaultValue="true"
      />
  <CheckBoxPreference
    android:key="default_start_next_routine"
    android:title="Start next routine automatically"
    android:summary="the above setting must be disabled"
    android:defaultValue="false"
      />
