<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Select routine to start a session:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RoutinesList"
        android:layout_marginBottom="0.0dp"
        android:layout_weight="1" />
    <Button
        android:text="Lift on the fly (not recommended)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OnTheFlyLink"
        android:paddingTop="15dip"
        android:minHeight="65dip" />
    <Button
        android:text="Create new routine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CreateRoutineLink"
        android:minHeight="65dip" />
</LinearLayout>